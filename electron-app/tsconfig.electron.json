{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-electron",
    "types": ["node", "electron"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./electron",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["electron/**/*.ts"],
  "exclude": ["node_modules"]
}
