{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-electron",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "types": ["node", "electron"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./electron"
  },
  "include": ["electron/**/*.ts"]
}
